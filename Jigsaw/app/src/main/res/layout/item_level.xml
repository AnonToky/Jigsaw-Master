<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardLevel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="?attr/colorSurface">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 预览图 -->
        <ImageView
            android:id="@+id/imageLevelPreview"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop" />

        <!-- 锁定遮罩 (保持半透明黑色 OK，不必切换) -->
        <View
            android:id="@+id/lockOverlay"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="#CC000000"
            android:visibility="gone" />

        <!-- 锁定图标 -->
        <ImageView
            android:id="@+id/lockIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="56dp"
            android:src="@drawable/ic_lock"
            android:visibility="gone"
            app:tint="?attr/colorOnSurface" />

        <!-- 关卡编号 -->
        <TextView
            android:id="@+id/tvLevelNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/bg_level_number"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:text="关卡 1"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <!-- 底部信息区 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageLevelPreview"
            android:background="?attr/colorSurface"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- 关卡名称 -->
            <TextView
                android:id="@+id/tvLevelName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="山水如画"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- 星级评价 -->
            <LinearLayout
                android:id="@+id/starsContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/star1"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_star_outline"
                    app:tint="?attr/colorOnSurface" />

                <ImageView
                    android:id="@+id/star2"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="2dp"
                    android:src="@drawable/ic_star_outline"
                    app:tint="?attr/colorOnSurface" />

                <ImageView
                    android:id="@+id/star3"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="2dp"
                    android:src="@drawable/ic_star_outline"
                    app:tint="?attr/colorOnSurface" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>